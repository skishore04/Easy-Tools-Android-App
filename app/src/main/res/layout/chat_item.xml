<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_chat_view"
        android:background="@drawable/mesgborder"
        android:backgroundTint="#1E88E5"
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_marginEnd="80dp"
        >

        <Button
            android:id="@+id/copy"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:background="@drawable/roundback"
            android:text="Copy"
            android:layout_gravity="right"
            android:textColor="@color/white"
            android:textSize="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:text="Hi Hello hor are you"
            android:layout_height="wrap_content"
            android:id="@+id/left_chat_text_view"
            android:textColor="@color/white"
            android:textSize="18sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_chat_view"
        android:layout_alignParentEnd="true"
        android:background="@drawable/mesgborder"
        android:backgroundTint="#7CB342"
        android:padding="8dp"
        android:layout_marginStart="80dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/right_chat_text_view"
            android:textColor="@color/white"
            android:textSize="18sp"
            />
    </LinearLayout>

</RelativeLayout>